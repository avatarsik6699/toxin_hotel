include UI_kit/form-elements/components/checkbox/checkbox
mixin checkbox-list(options = {name: "checkbox-list"})
	-
		const list = ["Завтрак", "Письменный стол", "Стул для кормления", "Кроватка", "Телевизор", "Шампунь"]
	.checkbox-list
		label.checkbox-list__panel= options.name
			input.checkbox-list__check(type="checkbox")
			span.checkbox-list__expand-icon
			.checkbox-list__items
				each text in list
					.checkbox-list__item
						+checkbox({text: text, weight: "normal"})