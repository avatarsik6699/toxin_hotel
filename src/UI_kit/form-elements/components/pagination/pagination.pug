mixin pagination(options = {start: 1, end: 15, total: "100+"})
	.pagination
		.pagination__pages
			a(href="#" class="pagination__page pagination__page_current")= options.start
			-for (let i = 1; i <= 2; i++)
				a(href="#" class="pagination__page pagination__page_start")= options.start + i
			a(href="#" class="pagination__page pagination__page_disabled") ...
			a(href="#" class="pagination__page pagination__page_end")= options.end
			button.pagination__next
				svg.pagination__arrow(viewbox="0 -6 17 28" xmlns="http://www.w3.org/2000/svg")
					path(d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2" + ".39062L9 0.984375Z")
		.pagination__total= `1 – 12 из ${options.total} вариантов аренды`