include /UI_kit/form-elements/components/dropdown/dropdown
include /UI_kit/form-elements/components/button/button
mixin find-room(options = {})
	.find-room
		.find-room__title= options.title
		.find-room__dates
			+dropdown({size: "small", type: "date", placeholder: "ДД.ММ.ГГГГ", title: ["прибытие", "выезд"], id: "findroom_1"})
		.find-room__guests
				+dropdown({
						type: "default", 
						list: ["взрослые", "дети", "младенцы"], 
						buttons: true, title: "Гости", 
						size: "large", 
						id: "findroom_2",
						placeholder: "Сколько гостей"})
		.find-room__find
			+button({theme: "full", size: "large", arrow: true, link_text: "Подобрать номер", color: "white", href: "https://avatarsik6699.github.io/toxin_hotel/dist/search-room/index.html"})